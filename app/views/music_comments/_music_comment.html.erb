<div id="music_comment-<%= music_comment.id %>">
  <li>投稿者名：<%= music_comment.commenter.name %></li>
  <li>コメント：<%= music_comment.comment %></li>
  <% if music_comment.commenter_id == current_user.id %>
    <li><%= link_to 'コメント削除', music_comment_path(music_comment), data: { confirm: '本当に削除しますか？' }, method: :delete, remote: true %></li>
  <% end %>
</div>
