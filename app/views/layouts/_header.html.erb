<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "General Concert", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right nav-tabs" >
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to "ホーム", root_path, class: "glyphicon glyphicon-home" %>
        </li>
        <% if logged_in? %>
          <li class="<%= 'active' if current_page?(music_posts_path) %>">
            <%= link_to "投稿一覧", music_posts_path, class: "glyphicon glyphicon-gift" %>
          </li>
          <li class="<%= 'active' if current_page?(users_path) %>">
            <%= link_to "ユーザー一覧", users_path, class: "glyphicon glyphicon-user" %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle glyphicon glyphicon-cog" data-toggle="dropdown">アカウント<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "ユーザー情報編集", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
